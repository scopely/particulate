<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scopely.particulate.example" >

    <application
        android:allowBackup="true"
        android:name="com.scopely.particulate.example.App"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.scopely.particulate.example.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.scopely.particulate.example.activities.PointActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.scopely.particulate.example.activities.GravityWellActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.scopely.particulate.example.activities.PathActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.scopely.particulate.example.activities.TouchPointActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.scopely.particulate.example.activities.SnowActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.scopely.particulate.example.activities.ViewBoundActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.scopely.particulate.example.activities.ViewCenterActivity"
            android:label="@string/app_name"/>
    </application>

</manifest>
